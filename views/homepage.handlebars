<!-- Loop over each object in the post array -->
<div class="row" id="sortable"></div>
    {{#each posts as |post|}}        
        <div class="row my-2 m-sm-1" id="sortable"></div>
          <div>
            <div id="card-title">
 <div class="card-sub"> <img class="card-img-top img-fluid d-flex justify-content-between" id="user-prof-pic" src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.pinterest.com%2Favolluu%2Fcat-pfps-d%2F&psig=AOvVaw0AIqE3XZiocToIeTczXuVP&ust=1714096973446000&source=images&cd=vfe&opi=89978449&ved=0CBIQjRxqFwoTCLi7w_yi3IUDFQAAAAAdAAAAABAE" alt="Profile Image">
                  </div>
              <div class="card-block">
                <div class="card-header">                
                  <a style="text-decoration:none" href="/comments/{{post.id}}"><h4 class="employee-name">{{post.title}}</h4></a>                  
                  <div class="employee-details">
                    <div class="user-name">Created by {{post.user.username}} on {{format_date post.date_created}}</div>            
                    <div class="post">{{post.post_content}}</div>
                  </div>
                </div>
                  {{#if comments}} 
                    {{#each comments}}              
                      <div class="comment-details">                    
                        <div class="comment-post">&nbsp;&#10095;&nbsp;&nbsp;{{comment}}</div>
                        <div class="comment-post">
                          <span class="comment-info">{{user.username}}</span>
                          <span class="comment-info">{{format_date comment_date}}</span>
                        </div>
                      </div>
                    {{/each}}
                  {{/if}}
                </div>
              </div>
            </div>
          </div>        
        </div>
    {{/each}}
</div>